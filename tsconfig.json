{
    "ts-node": {
        // these options are overrides used only by ts-node
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "./dist/",
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "resolveJsonModule": true,
        "downlevelIteration": true
    }
}
