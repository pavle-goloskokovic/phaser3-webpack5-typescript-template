{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "./dist/",
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "resolveJsonModule": true,
        "downlevelIteration": true
    },
    "exclude": [
        "./dist"
    ]
}
